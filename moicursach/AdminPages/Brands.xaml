<Window x:Class="moicursach.AdminPages.Brands"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:moicursach.AdminPages"
        mc:Ignorable="d"
        Title="Brands" Height="450" Width="800">
    <Grid>
        <Label FontSize="15" FontWeight="Bold" Content="Добавьте новую марку автомобиля" HorizontalAlignment="Center" Margin="0,5,0,0"/>
        <Label FontSize="13" Content="Название " HorizontalAlignment="Left" VerticalAlignment="Center" Margin=" 30,0,0,50"/>
        <TextBox x:Name="Content" HorizontalAlignment="Left" VerticalAlignment="Center" Width="150" Height="20" Margin="120,0,0,50" />
        <Button x:Name="Confirm" Width="100" Height="20" HorizontalAlignment="Center" Margin="0,50,400,0" Click="Confirm_Click">Добавить</Button>
        <DataGrid x:Name="Table" AutoGenerateColumns="True" Width="400" Margin="350, 50, 0, 20"/>
    </Grid>
</Window>
