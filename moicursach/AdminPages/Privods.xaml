<Window x:Class="moicursach.Privods"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:moicursach"
        mc:Ignorable="d"
        Title="addPrice" Height="400" Width="800">
    <Grid>
        <Label FontSize="15" FontWeight="Bold" Content="Добавление категории привода" HorizontalAlignment="Center" Margin="0,5,0,0"/>
        <Label FontSize="15" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="70,0,0,0" Content="Название"/>
        <TextBox x:Name="Name" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="180,0,0,0" Width="100" Height="20"/>
        <Button x:Name="Confirm" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="130,100,0,0" Width="100" Height="20" Click="Confirm_Click">Добавить</Button>
        <DataGrid x:Name="Table" AutoGenerateColumns="True" Width="400" Margin="350, 50, 0, 20"/>
    </Grid>
</Window>
