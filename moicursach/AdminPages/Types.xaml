<Window x:Class="moicursach.Types"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:moicursach"
        mc:Ignorable="d"
        Title="Типы" Height="400" Width="800">
    <Grid>
        <Label FontSize="15" FontWeight="Bold" Content="Типы автомобилей" HorizontalAlignment="Center" Margin="0,5,0,0"/>
        <Label FontSize="15" Content="Название" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="70,0,0,100"/>
        <TextBox x:Name="Name" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="170,0,0,100" Width="130" Height="20"/>
        <Button x:Name="Confirm" Width="100" Height="20" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="70,10,0,0" Click="Confirm_Click">Добавить</Button>
        <Button x:Name="Delete" Width="100" Height="20" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="200,10,0,0" Click="Delete_Click">Удалить</Button>
        <DataGrid x:Name="Table" AutoGenerateColumns="True" Width="400" Margin="350, 50, 0, 20"/>
    </Grid>
</Window>
