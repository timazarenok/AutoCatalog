<Window x:Class="moicursach.Order"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:moicursach"
        mc:Ignorable="d"
        Title="Order" Height="250" Width="400">
    <Grid>
        <Label FontWeight="Bold" VerticalAlignment="Top" HorizontalAlignment="Center">Оформление заказа</Label>
        <Label FontWeight="Bold" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,30,0,0">Номер карты(без пробелов)</Label>
        <TextBox x:Name="Number" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,55,0,0" Width="170" Height="20"/>
        <Label FontWeight="Bold" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,75,0,0">Предложенная цена</Label>
        <TextBox x:Name="Price" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,105,0,0" Width="120" Height="20"/>
        <Button Width="100" Height="30" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,150,0,0" Click="Button_Click">Отправить</Button>
    </Grid>
</Window>
